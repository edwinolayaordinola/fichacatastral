<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="2sp"
        android:layout_marginEnd="2sp">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_ficha"
                android:text="1.- Datos del Inmueble/Predio"
                android:padding="5sp"
                android:textAllCaps="true"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv1ccactual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Codigo catastral actual"
                android:textSize="18sp"
                android:padding="5sp"
                android:textAllCaps="true"
                android:background="@color/sub_item_ficha"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cvccactual"
                    android:layout_width="match_parent"
                    android:layout_height="70sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv1ccactual">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:orientation="horizontal"
                            android:padding="16dp">
                            <EditText
                                android:id="@+id/txtccactual1"
                                android:width="@android:dimen/notification_large_icon_width"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:hint="0"/>
                            <EditText
                                android:id="@+id/txtccactual2"
                                android:width="@android:dimen/notification_large_icon_width"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:hint="0"/>
                            <EditText
                                android:id="@+id/txtccactual3"
                                android:width="@android:dimen/notification_large_icon_width"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:hint="0"/>
                            <EditText
                                android:id="@+id/txtccactual4"
                                android:width="@android:dimen/notification_large_icon_width"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:hint="0"/>
                            <EditText
                                android:id="@+id/txtccactual5"
                                android:width="@android:dimen/notification_large_icon_width"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:hint="0"/>
                            <EditText
                                android:id="@+id/txtccactual6"
                                android:width="@android:dimen/notification_large_icon_width"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:textAlignment="center"
                                android:layout_weight="1"
                                android:hint="0"/>

                            <EditText
                                android:id="@+id/txtccactual7"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:width="@android:dimen/notification_large_icon_width"
                                android:layout_weight="1"
                                android:textAlignment="center"
                                android:hint="0"/>
                        </LinearLayout>
                </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/tv1nueva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Codigo catastral nuevo"
            android:textSize="18sp"
            android:padding="5sp"
            android:textAllCaps="true"
            android:background="@color/sub_item_ficha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cvccactual"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1nueva"
            android:layout_width="match_parent"
            android:layout_height="70sp"
            app:layout_constraintTop_toBottomOf="@+id/tv1nueva">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="16dp">
                <EditText
                    android:id="@+id/txtccnueva1"
                    android:width="@android:dimen/notification_large_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:hint="0"/>
                <EditText
                    android:id="@+id/txtccnueva2"
                    android:width="@android:dimen/notification_large_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:hint="0"/>
                <EditText
                    android:id="@+id/txtccnueva3"
                    android:width="@android:dimen/notification_large_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:hint="0"/>
                <EditText
                    android:id="@+id/txtccnueva4"
                    android:width="@android:dimen/notification_large_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:hint="0"/>
                <EditText
                    android:id="@+id/txtccnueva5"
                    android:width="@android:dimen/notification_large_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:hint="0"/>
                <EditText
                    android:id="@+id/txtccnueva6"
                    android:width="@android:dimen/notification_large_icon_width"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:hint="0"/>

                <EditText
                    android:id="@+id/txtccnueva7"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:width="@android:dimen/notification_large_icon_width"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:hint="0"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvsuministro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Suministro"
            android:textSize="18sp"
            android:padding="5sp"
            android:textAllCaps="true"
            android:background="@color/sub_item_ficha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv1nueva"
            />
        <EditText
            android:id="@+id/txtSuministro"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvsuministro"
            android:hint="0"
            />
        <TextView
            android:id="@+id/tvUrbanizacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Urbanizacion/Asociacion/AAHH"
            android:textSize="18sp"
            android:padding="5sp"
            android:textAllCaps="true"
            android:background="@color/sub_item_ficha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSuministro"
            />
        <EditText
            android:id="@+id/txtUrbanizacion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvUrbanizacion"
            android:hint=".."
            />

        <TextView
            android:id="@+id/tvPredioEncuentra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="El predio se encuentra"
            android:textSize="18sp"
            android:padding="5sp"
            android:textAllCaps="true"
            android:background="@color/sub_item_ficha"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtUrbanizacion"
            />
        <Spinner
            android:id="@+id/spinnerPredioEncuentra"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPredioEncuentra"
            android:textSize="18sp"
            android:padding="5sp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>